<link rel="stylesheet" href="~/css/createpedido.css" asp-append-version="true" />

@model Confeitaria.App.ViewModels.PedidoViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="box">
    <h1 class="text-center mt-3">Dados do Cliente</h1>
    <hr />
    <form asp-action="Create">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_ClienteCreate" />

            <h1 class="text-center mt-5">Endereço de Entrega</h1>
            <hr />
            <partial name="_EnderecoCreate" />

            <h1 class="text-center mt-5">Informações do Pedido</h1>
            <hr />
            <div class="form-group col-md-6 mt-3">
                <label asp-for="DataEntrega" class="control-label"></label>
                <input asp-for="DataEntrega" class="form-control fs-4" />
                <span asp-validation-for="DataEntrega" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 mt-3">
                <label asp-for="HorarioEntrega" class="control-label"></label>
                <select asp-for="HorarioEntrega" class="form-select fs-4">
                    <option value="1">Manhã: das 8h até 12h</option>
                    <option value="2">Tarde: das 13h até 18h</option>
                </select>
                <span asp-validation-for="HorarioEntrega" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 mt-4 mb-3">
                <label asp-for="FormaPagamento" class="control-label"></label>
                <select asp-for="FormaPagamento" class="form-select fs-4">
                    <option value="1">Cartão de Crédito</option>
                    <option value="2">Pix</option>
                    <option value="3">Boleto</option>
                </select>
                <span asp-validation-for="FormaPagamento" class="text-danger"></span>
            </div>
            @*          <div class="form-group col-md-6 mt-4">
            <label asp-for="QuantProduto" class="control-label"></label>
            <input asp-for="QuantProduto" class="form-control fs-4" />
            <span asp-validation-for="QuantProduto" class="text-danger"></span>
            </div>  *@
            <div class="col-md-12 mt-5">
                <button type="submit" class="btn mx-auto text-center">Enviar Pedido</button>
            </div>
            @* <div class="form-group col-md-6">
            <label asp-for="DataPedido" class="control-label"></label>
            <input asp-for="DataPedido" class="form-control fs-4" />
            <span asp-validation-for="DataPedido" class="text-danger"></span>
            </div> *@
        </div>
    </form>
    <br/>
    <a asp-action="Carrinho" asp-controller="Produtos" class="back">voltar para o carrinho</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        BuscarCep();
    </script>
}
